<%- include('./partials/header') %>

 
<% user.cart.forEach(function(item){ %>
    <div class=" bg-zinc-500 py-1 px-8 md:px-4">
  <div class="flex flex-col md:flex-row gap-10">
    
    <!-- Product Preview Card -->
    <div class="md:w-1/3 w-full bg-white shadow-xl rounded-xl overflow-hidden">
      <div class="h-80 flex items-center justify-center bg-[<%= item.bgcolor %>]">
        <img
          class="h-64 object-contain"
          src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
          alt="<%= item.name %>"
        />
      </div>
      <div class="p-5 bg-[<%= item.panelcolor %>]">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-2xl font-semibold text-[<%= item.textcolor %>]"><%= item.name %></h3>
          <div class="flex items-center gap-2">
            <button class="w-7 h-7 bg-white text-black rounded-full flex items-center justify-center hover:bg-gray-100">
              <i class="ri-add-line"></i>
            </button>
            <div class="px-3 py-1 rounded-md bg-white text-black">01</div>
            <button class="w-7 h-7 bg-white text-black rounded-full flex items-center justify-center hover:bg-gray-100">
              <i class="ri-subtract-line"></i>
            </button>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <h4 class="text-lg font-medium text-[<%= item.textcolor %>]">Net Total</h4>
          <h2 class="text-lg font-semibold text-[<%= item.textcolor %>]">₹ <%= item.price %></h2>
        </div>
      </div>
    </div>

    <!-- Price Breakdown Section -->
    <div class="md:w-2/3 w-full bg-white shadow-xl rounded-xl p-6">
      <h3 class="text-2xl font-bold mb-6 text-gray-800">Price Breakdown</h3>

      <div class="space-y-4 text-gray-700">
        <div class="flex justify-between">
          <span>Total MRP</span>
          <span>₹ <%= item.price %></span>
        </div>
        <div class="flex justify-between">
          <span>Discount on MRP</span>
          <span>- ₹ <%= item.discount %></span>
        </div>
        <div class="flex justify-between">
          <span>Platform Fee</span>
          <span>₹ 20</span>
        </div>
        <div class="flex justify-between">
          <span>Shipping Fee</span>
          <span class="text-green-600 font-medium">FREE</span>
        </div>
      </div>

      <hr class="my-6 border-gray-300" />

      <div class="flex justify-between items-center">
        <h3 class="text-xl font-semibold text-gray-800">Total Amount</h3>
        <h3 class="text-xl font-bold text-green-600">
          ₹ <%= item.price - item.discount + 20 %>
        </h3>
      </div>
    </div>

  </div>
</div>


  <% } ) %>

<%- include('./partials/footer') %>
